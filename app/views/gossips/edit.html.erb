<h1>Change le message</h1>

 
<%= form_with(model: @gossip, local: true) do |form| %>
 
  <p>
    <%= form.label :anonymous_author %><br>
    <%= form.text_field :anonymous_author %>
  </p>
 
  <p>
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </p>
 
  <p>
    <%= form.submit %>
    <%= link_to '⚠️Clique pour détruire⚠️', @gossip, method: :delete %>
  </p>
  <p><%= link_to 'Case départ', welcome_path %></p>
  
 
<% end %>
 